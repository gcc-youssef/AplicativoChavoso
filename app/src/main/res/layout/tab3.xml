<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:paddingRight="64dp"
        android:paddingLeft="64dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3c3c3c">

        <ImageButton
            android:id="@+id/imgbtn_tamanho_curto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/tamanho_curto"/>

        <ImageButton
            android:id="@+id/imgbtn_tamanho_medio"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/tamanho_medio"/>
        <ImageButton
            android:id="@+id/imgbtn_tamanho_longo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/tamanho_longo"/>


    </LinearLayout>
</ScrollView>
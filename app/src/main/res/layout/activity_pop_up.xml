<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="500dp"
    android:background="#000"
    android:layout_gravity="center"
    android:padding="5dp"
    tools:context="br.com.outputers.aplicativochavoso.PopUp">


    <Button
        android:id="@+id/btn_fechar_popup"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="X"
        android:textAlignment="center"
        android:textColor="#fed700"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:background="@drawable/circlebackground"/>

    <ImageView
        android:id="@+id/full_popup_image"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:scaleType="centerCrop"/>

    <ImageButton
        android:id="@+id/imgbtn_popup_chavei"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/full_popup_image" />


</RelativeLayout>
